@page


<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>首页~一起帮</title>

    <link rel="stylesheet" href="/css/Wait.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />


    <style type="text/css">
        .post-a-2 {
            /*向左浮动*/
            float: left;
            /*宽度百分之三十*/
            width: 30%;
            /*位置是相对的*/
            position: relative;
            /*1px的黑色虚线*/
            border: 1px dotted black;
        }

        .post-a-1 {
            /*宽度*/
            width: 1500px;
            /*右边边缘自动*/
            margin-right: auto;
            /*左边边缘自动*/
            margin-left: auto;
            /*最小高度*/
            min-height: 550px;
            /*边缘*/
            margin: 100px 0 0 0;
            -webkit-box-sizing: border-box;
            border: 1px dotted black;
        }

        .post-b-2 {
            /*文本对齐 居中*/
            text-align: center;
        }

        .post-a-3 {
            /*显示 块元素*/
            display: block;
            /*边缘右边自动*/
            margin-right: auto;
            /*边缘左边自动*/
            margin-left: auto;
            /*最大宽度*/
            max-width: 100%;
        }

        .button {
            /*填充 上20 右20*/
            padding: 20px 20px;
            /*字体大小 18*/
            font-size: 18px;
            /*线的高度*/
            line-height: 1.3px;
        }

        .b-1 {
            /*字体颜色*/
            color: #ffffff;
            /*背景颜色*/
            background-color: #0094ff;
            /*边界颜色
                border-color: #b6ff00;
            */
            /*文本装饰线 没有
                text-decoration-line: none;
            */
        }

        .c-1 {
            /*右边填充*/
            padding-right: 30px;
            /*左边填充*/
            padding-left: 15px;
            /*位置相对的
            position: relative;
            */
        }

        .m-1 {
            height: 360px;
            /*上方填充*/
            padding-top: 50px;
        }

        .clear {
            /*左右的流元素都清除*/
            clear: both;
        }

        .top-nav {
            /*位置固定*/
            position: fixed;
            width: 100%;
            height: 100%;
        }

        .banner {
            /*填充顶端*/
            padding-top: 100px;
            /*边缘*/
            margin: 0 auto;
            width: 1500px;
            height: 700px;
            /*位置相对的*/
            position: relative;
        }

        .home-card {
            min-height: 480px;
        }

            .home-card .content {
                height: 360px;
                padding-top: 70px;
            }
    </style>

</head>
<body>

    <div class="row">
        <div class="col-md-4 home-card">
            <div class="lead content">
                <img src="~/images/求助.svg" class="center-block" />
                <h2 class="text-center">一对一远程协助</h2>
                <p class="text-center">帮忙</p>
            </div>
            <a class="btn btn-primary btn-lg btn-block bottom" href="/Helper/Helper">
                求助
            </a>
        </div>
        <div class="col-md-4 home-card">
            <div class="lead content text-center">
                <img src="~/images/督促.svg" class="center-block" />
                <h2 class="text-center">就让我来督促你</h2>
                <p class="text-center">决心</p>
            </div>
            <a class="btn btn-primary btn-lg btn-block">督促</a>
        </div>
        <div class="col-md-4 home-card">
            <div class="lead content ">
                <img src="~/images/文章.svg" class="img-responsive center-block" />
                <h2 class="text-center">发布前需付费</h2>
                <p class="text-center">保证</p>
            </div>
            <a class="btn btn-primary btn-lg btn-block">发布</a>
        </div>
    </div>


    <a href="/Log/Body">测试</a>
    <a href="/About">注册个人信息</a>
</body>
</html>






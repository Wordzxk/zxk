@page
@model WebThreetier.Pages.RegisterModel

<h2>@ViewData["title"]</h2>
<form method="post" asp-page="/Register">
    <div>
        <label>用户名：</label>
        <input asp-for="Register.UserName" />
        <span asp-validation-for="Register.UserName"></span>
    </div>
    <div>
        <label>密码：</label>
        <input asp-for="Register.Password" />
        <span asp-validation-for="Register.Password"></span>
    </div>
    <div>
        <label>确认密码：</label><input asp-for="Register.ConfirmPassword" />
        <span asp-validation-for="Register.ConfirmPassword"></span>
    </div>
    <div>
        <button type="submit">提交</button>
    </div>
</form>
